<div data-dismiss="modal" class="modal fade" id="signinModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content text-center">
            <div id="contact-form">
                <div class="contact-form-title text-center">
                    <h2>Get in touch</h2>
                </div>

                <form class="contact-form clearfix" action="/login" method="post" novalidate="novalidate">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2">
                            <button class="btn btn-block btn-lg btn-info"><span class="fa fa-facebook"></span> &nbsp;Sign in with Facebook</button>
                            <button class="btn btn-block btn-lg btn-danger"><span class="fa fa-google">&nbsp;Sign in with Google</button>
                            <br> <p class="text-center">Or</p>
                            <p class="input-block">
                                <label class="required" for="user_name"><i class="fa fa-user"></i></label>
                                <input type="text" class="valid" name="username" id="user_name" value="" placeholder="Username*">
                            </p>
                            <!-- col-md-4 -->

                            <p class="input-block">
                                <label class="required" for="contact_password"><i class="fa fa-envelope"></i></label>
                                <input type="password" class="valid" name="password" id="contact_password" value="" placeholder="Password*">
                            </p>
                            <!-- col-md-4 -->

                            <p class="contact-button clearfix">
                                <input type="submit" class="input-submit" id="submit-contact" value="Login">
                            </p>
                            <p class="text-center">Forgot your password?</p>
                        </div>
                        <!-- col-md-12 -->
                    </div>
                    <!-- row -->
                </form>
                <div id="response"></div>
                </div>
                <div class="modal-footer" style="text-align:center !important">
                    <button data-dismiss="modal" data-name="register-modal" data-toggle="modal" data-target="#loginModal" class=" btn btn-primary">Sign up</button>
                    <span> &nbsp; &nbsp;Create account with email</span>
                </div>

                <br>
    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal.fade -->
